
<div id="rules">
<% if @rules != nil %>
  <h4>Rules:</h4>
  <% @rules.each do |rule| %>
  <%= rule.content %> <br>
    <%= link_to "Destroy", rule_path(rule), method: :delete,
    data: {confirm: "Are you sure?"} %><br>
  <%= link_to 'Edit', edit_rule_path(rule) %><br>
  <% end %>
<% end %>
</div>
<div>
  <h4>New Rule</h4>
  <%= form_for :rule, url: house_rules_path(@house), method: :post do |f| %>
  <%= f.text_area :content %><br><br>
  <%= f.submit "Create Rule", :class => "button"  %>
  <% end %>
</div>
