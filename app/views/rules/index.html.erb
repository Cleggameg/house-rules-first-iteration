<div class="row">
  <div class="small-6 large-2 columns"><br></div>
  <div class="small-6 large-8 columns">
<div id="rules">
<% if @rules != nil %>
  <h4>Rules:</h4>
  <% @rules.each do |rule| %>
  <%= rule.content %> <br>
    <%= link_to "Destroy", house_rule_path(@house, rule), method: :delete,
    data: {confirm: "Are you sure?"} %><br>
  <%= link_to 'Edit', edit_house_rule_path(@house, rule) %><br>
  <% end %>
<% end %>
</div>
<div>
  <h4>New Rule</h4>
  <%= render 'rules/form' %>
</div>

  </div>
  <div class="small-12 large-2 columns"><br></div>
</div>
