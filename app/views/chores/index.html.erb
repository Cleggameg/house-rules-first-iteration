
<div id="chores">
<% if @chores != nil %>
  <h4>Chores: </h4>
  <% @chores.each do |chore| %>
  <% log = @user.chore_logs.where(chore_id: chore.id ) %>
  <%= chore.task %> <br>
  Completed :<%= chore.chore_logs.size %> <br>
  <%= link_to 'View Log', house_chore_path(@house, chore) %>
  <%= link_to 'Complete',  house_chore_chore_log_path(@house, chore, @user.chore_logs.new(chore: chore)), method: :post %>
  <%= link_to 'Edit', edit_house_chore_path(@house, chore) %><br>
  <%= link_to "Delete", house_chore_path(@house, chore), method: :delete,
    data: {confirm: "Are you sure?"} %><br>
  <% end %>
<% end %>
</div>
<div>
  <h4>New Chore</h4>
  <%= form_for :chore, url: house_chores_path(@house) do |f| %>
  <%= f.label :task %>
  <%= f.text_field :task %><br><br>
  <%= f.submit "Add Chore", :class => "button" %>
  <% end %>
</div>

